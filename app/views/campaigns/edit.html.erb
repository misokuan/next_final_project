<h1> Edit your Campaign! </h1>

<%= form_for [@user, @campaign] do |f| %>
<p>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :Rewards %><br>
    <%= f.text_area :rewards %>
  </p>

  <p>
  	<%= f.label :Add_Campaign_Images %>
  	<%= f.file_field :campaign_images, multiple: true %>
  </p>

   <p>
   	<%= f.label :Add_Campaign_Cover_Photo %>
  	<%= f.file_field :cover_photo %>
  </p>

    <%= f.submit "Edit Campaign"%>
<% end %>
