<%= form_for :session, url: session_path do |form| %>
  <div class="text-field">
    <%= form.label :email %>
    <div class="form-float">
    <%= form.text_field :email, type: 'email' %></div>
  </div><br>

  <div class="password-field">
    <%= form.label :password %>
    <div class="form-float">
    <%= form.password_field :password %></div>
  </div><br>
      <div class="modal-footer">
        <center>
        <div class="submit-field">
    <%= form.submit :class => "btn btn-primary btn-lg col-md-12 sign-in-size" %>
        </div>


        <div class="other-links">
        <%=link_to "Log In With FB", "/auth/facebook", :class => "btn btn-info btn-lg col-md-12 sign-in-size" %>
        </div>
        </center>
  </div> 
<% end %>
    <center>
<%= link_to t(".forgot_password"), new_password_path %></center>