<!--main content-->
<div class="profile-background">
  <div class="container edit-profile">
    <div align="center"><h1 class="page-header">
    <% if current_user == @profile.user %>
    Your Profile
    <% else %>
    <%= @profile.user.username %>'s Profile
    <% end %>
    </h1></div>
    <div class="row">
      <!-- left column -->
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="text-center">
          <% if @profile.avatar.url == nil %>
            <img src="http://i452.photobucket.com/albums/qq244/missnpk93/defaultuser_zpsnsqypglf.png" class="avatar img-circle img-thumbnail" alt="avatar" width="150px" height="150px">
            <% else %>
            <img src="<%= @profile.avatar.url %>" class="avatar img-circle img-thumbnail" alt="avatar" width="150px" height="150px">
            <% end %>
            <br>
        </div>
      </div>
      <!-- edit form column -->
      <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 personal-info">
      <div align="center" class="col-md-12 col-sm-12 col-lg-12 form-color">
          <br>
            <h1><%= @profile.full_name %></h1><br>
            <%= @profile.description %><br><br>
          <b>Gender:</b><br><% if @profile.gender != nil %>
            <%= @profile.gender.capitalize %><% else %>N/A<% end %><br><br>
          <b>Age:</b> <br><% if @profile.date_of_birth != nil %>
            <%= @profile.date_of_birth_age %> years old<% else %>N/A<% end %><br><br>
          <b>Address:</b><br><% if @profile.address != nil %>
             <%= @profile.address %><% else %>N/A<% end %><br><br>
          <b>City:</b><br><% if @profile.city != nil %>
             <%= @profile.city %><% else %>N/A<% end %><br><br>
          <b>Interests</b><br><% if @profile.interest.length != 0 %>
            <% @profile.interest.each do |int| %>
              <% if int.to_i > 0 %>
              #<%= Interest.find(int.to_i).interest_name.capitalize %>&nbsp;&nbsp;
              <% end %>
              <% end %><% else %>N/A<% end %><br><br>
            <% if current_user == @profile.user %>
            <%= button_to "Edit Profile", edit_user_profile_path(@profile.user, @profile.id), method: :get, class: "btn btn-primary btn-lg col-md-12 profile-size"%>
            <% end %>
        </div>
            <br><br>
          </div>
        </div>
</div>
      </div>
