<!--main content-->
<div class="profile-background">
  <div class="container edit-profile">
    <div align="center"><h1 class="page-header">Edit Profile</h1></div>
    <div class="row">
      <!-- left column -->
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="text-center">
          <% if @profile.avatar.url == nil %>
            <img src="http://i452.photobucket.com/albums/qq244/missnpk93/defaultuser_zpsnsqypglf.png" class="avatar img-circle img-thumbnail" alt="avatar" width="150px" height="150px">
            <% else %>
            <img src="<%= @profile.avatar.url %>" class="avatar img-circle img-thumbnail" alt="avatar" width="150px" height="150px">
            <% end %>
          <h6>Upload a different photo...</h6>
          <%= form_for [@user, @profile] do |f| %>
            <div align="center"><%= f.file_field :avatar %></div>
            <br>
        </div>
      </div>
      <!-- edit form column -->
      <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a> 
          <div align="center"><i class="fa fa-coffee"></i>
            This is an <strong>.alert</strong>.<br>Kindly fill up your profile page for us to better customize to your needs.</div>
        </div>
      </div>
      <div align="center" class="col-md-12 col-sm-12 col-lg-12 form-color">

        <table class="profile-table">
          <tr><td><%= f.label :First_Name %><b>:</b></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td><%= f.label :Last_Name %><b>:</b></td>
            <td><%= f.text_field :last_name %></td>
          </tr>
          <tr><td><%= f.label :Gender %><b>:</b></td>
          <td><%= f.radio_button :gender, 'male' %> 
            <%= label :Gender_male, 'Male' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <%= f.radio_button :gender, 'female' %>
            <%= label :Gender_female, 'Female' %>
          </td>  </tr>

          <tr>
            <td> <%= f.label :Date_Of_Birth %><b>:</b></td>
            <td>  <%= f.date_field :date_of_birth %></td></tr>


            <tr><td>
              <%= f.label :Description %><b>:</b></td>
              <td> <%= f.text_area :description, cols: "27", rows: "5" %></td>
            </tr><tr>

            <td>
             <%= f.label :Address %><b>:</b></td>
             <td> <%= f.text_area :address %></td>
           </tr>
           <tr>

            <td>
             <%= f.label :City %><b>:</b></td>
             <td><%= f.text_field :city %></td>
           </tr>

           <tr> <td><b><%= f.label :Interest %><b>:</b></td>
           <% num = 1 %>
            <td><%= f.collection_check_boxes :interest, Interest.all, :id, :interest_name do |b| %>
              <div class="collection-check-box">
              <%= b.check_box %>
              <%= Interest.find(num).interest_name.capitalize %>&nbsp;
              <% num += 1 %>
              </div>
              <% end %>
            </td>
            </tr>
              </table><br>
              <%= f.submit "Submit Changes", class: "btn btn-primary btn-lg col-md-12 profile-size"%>
              <% end %>
        </div>
            <br><br>
          </div>
        </div>

      </div>