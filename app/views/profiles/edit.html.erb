<!--main content-->
  
              <div class="container">
  <h1 class="page-header">Edit Profile</h1>
  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <img src="http://www.pixxcell.com/images/default-avatar.png" class="avatar img-circle img-thumbnail" alt="avatar" width="250px" height="250px">
        <h6>Upload a different photo...</h6>
        <input type="file" class="text-center center-block well well-sm">
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <div class="alert alert-info alert-dismissable">
        <a class="panel-close close" data-dismiss="alert">Ã—</a> 
        <i class="fa fa-coffee"></i>
        This is an <strong>.alert</strong>. Kindly fill up your profile page for us to better customize to your needs.
      </div>
      <h3>Personal info</h3>
      <form class="form-horizontal" role="form">
   
          <div class="col-lg-8">

<%= form_for [@user, @profile] do |f| %>
<p>
    <%= f.label :First_Name %><br>
    <%= f.text_field :first_name %>
  </p>
        
          <p>
             <%= f.label :Last_Name %><br>
            <%= f.text_field :last_name %>
          </p> 

          <p>
          <%= f.label :Gender %><br>
<%= f.radio_button :gender, 'male' %> 
  <%= label :Gender_male, 'Male' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.radio_button :gender, 'female' %>
  <%= label :Gender_female, 'Female' %>
          </p>          

          <p>
            <%= f.label :Description %><br>
            <%= f.text_area :description %>
          </p>

              <p>
             <%= f.label :Date_Of_Birth %><br>
               <%= f.date_field :date_of_birth %>
            </p>

              <p>
               <%= f.label :Address %><br>
               <%= f.text_area :address %>
              </p>

            <p>
             <%= f.label :City %><br>
             <%= f.text_field :city %>
            </p>

              <p>
                <%= f.label :Category_of_Interest %><br>
                <%= f.check_box :interest %> Music&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= f.check_box :interest %> Literature
              </p>

              <%= f.submit "Edit Profile", class: "btn btn-primary btn-lg col-md-12 profile-size"%>
            <% end %>
          </div>

        </div>
      </form>
    </div>
  </div>
</div>

 